---
interface Props {
    title: string;
    description?: string;
    class?: string;
}

const {
    title,
    description = "Mesh is a community art project space.",
    class: className = ''
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>

    <!-- Open Graph -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:locale" content="en_GB">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@200;300;400;500&display=swap" rel="stylesheet">

    <title>{title}</title>

    <style is:global>
        @import '../styles/global.css';
    </style>
</head>
<body class={className}>
<a href="#main" class="skip-link">Skip to content</a>

<slot />

<!-- Minimal footer for internal pages -->
{currentPath !== '/' && (
        <footer class="site-footer">
            <div class="container">
                <a href="/" class="footer-logo" aria-label="Return to Mesh home">Mesh</a>
            </div>
        </footer>
)}
</body>
</html>

<style>
    .site-footer {
        padding: var(--space-2xl) 0;
        border-top: 1px solid var(--border-subtle);
        margin-top: var(--space-3xl);
    }

    .site-footer .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-md);
        text-align: center;
    }

    .footer-logo {
        font-size: var(--text-lg);
        font-weight: 200;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        background: linear-gradient(
                135deg,
                var(--chrome-dark) 0%,
                var(--chrome-light) 50%,
                var(--chrome-dark) 100%
        );
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .footer-logo:hover {
        opacity: 0.8;
    }

    .footer-location {
        font-size: var(--text-xs);
        color: var(--text-muted);
        letter-spacing: 0.1em;
    }
</style>
