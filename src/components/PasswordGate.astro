---
// Change this to your secret password
const PASSWORD = "mesht1ngs";
---

<div class="password-gate" id="password-gate" data-password={PASSWORD}>
    <div class="gate-content">
        <div class="gate-logo">Mesh</div>
        <form class="gate-form" id="gate-form">
            <input
                    type="password"
                    class="gate-input"
                    id="gate-input"
                    placeholder="Enter password"
                    autocomplete="off"
                    autofocus
            />
            <button type="submit" class="gate-button">Enter</button>
        </form>
        <p class="gate-error" id="gate-error"></p>
    </div>
</div>

<script>
	const gate = document.getElementById('password-gate');
	const form = document.getElementById('gate-form');
	const input = document.getElementById('gate-input') as HTMLInputElement;
	const error = document.getElementById('gate-error');
	const password = gate?.getAttribute('data-password') || '';

	// Check if already authenticated
	if (sessionStorage.getItem('mesh-authenticated') === 'true') {
		gate?.remove();
	}

	form?.addEventListener('submit', (e) => {
		e.preventDefault();

		if (input?.value === password) {
			sessionStorage.setItem('mesh-authenticated', 'true');
			gate?.classList.add('gate--unlocked');
			setTimeout(() => gate?.remove(), 500);
		} else {
			error!.textContent = 'Wrong password';
			input?.classList.add('gate-input--error');
			setTimeout(() => {
				error!.textContent = '';
				input?.classList.remove('gate-input--error');
			}, 2000);
		}
	});
</script>

<style>
    .password-gate {
        position: fixed;
        inset: 0;
        z-index: 9999;
        background: var(--void);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity var(--transition-slow);
    }

    .gate--unlocked {
        opacity: 0;
        pointer-events: none;
    }

    .gate-content {
        text-align: center;
        max-width: 300px;
        padding: var(--space-lg);
    }

    .gate-logo {
        font-size: var(--text-2xl);
        font-weight: 200;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        background: linear-gradient(
                135deg,
                var(--chrome-dark) 0%,
                var(--chrome-light) 50%,
                var(--chrome-dark) 100%
        );
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: var(--space-lg);
    }

    .gate-message {
        font-size: var(--text-sm);
        color: var(--text-muted);
        letter-spacing: 0.05em;
        margin-bottom: var(--space-xl);
    }

    .gate-form {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
    }

    .gate-input {
        width: 100%;
        padding: var(--space-md);
        background: var(--void-soft);
        border: 1px solid var(--border-visible);
        border-radius: 2px;
        color: var(--text-primary);
        font-family: var(--font-body);
        font-size: var(--text-sm);
        letter-spacing: 0.1em;
        text-align: center;
        transition: border-color var(--transition-base);
    }

    .gate-input::placeholder {
        color: var(--text-muted);
        letter-spacing: 0.1em;
    }

    .gate-input:focus {
        outline: none;
        border-color: var(--chrome-mid);
    }

    .gate-input--error {
        border-color: var(--accent-warm);
        animation: shake 0.3s ease;
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-8px); }
        75% { transform: translateX(8px); }
    }

    .gate-button {
        padding: var(--space-md) var(--space-lg);
        background: transparent;
        border: 1px solid var(--chrome-dark);
        border-radius: 2px;
        color: var(--chrome-mid);
        font-family: var(--font-body);
        font-size: var(--text-sm);
        font-weight: 300;
        letter-spacing: 0.1em;
        cursor: pointer;
        transition: all var(--transition-base);
    }

    .gate-button:hover {
        border-color: var(--chrome-mid);
        color: var(--chrome-light);
    }

    .gate-button:focus-visible {
        outline: 2px solid var(--nav-hover);
        outline-offset: 2px;
    }

    .gate-error {
        height: 1.5em;
        margin-top: var(--space-md);
        font-size: var(--text-xs);
        color: var(--accent-warm);
        letter-spacing: 0.05em;
    }

    /* Reduced motion */
    @media (prefers-reduced-motion: reduce) {
        .password-gate {
            transition: none;
        }

        .gate-input--error {
            animation: none;
        }
    }
</style>
